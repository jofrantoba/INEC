<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:id="@+id/layout_open_incidencia"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/dimen20"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="160dp"
            android:paddingLeft="@dimen/dimen8"
            android:id="@+id/uili_layout_click"
            android:gravity="center"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:text="Galería de Imágenes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center|right"
            android:paddingRight="@dimen/dimen8"
            android:layout_height="?attr/actionBarSize">
            <Button
                android:id="@+id/uisg_close_galeria"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_cerrarnuevo"
                android:paddingBottom="5dp"
                android:textSize="@dimen/dimen9"
                android:textColor="#e8e9e9" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/layout_open_incidencia"
        android:layout_width="match_parent"
        android:layout_above="@+id/layoutProfile"
        android:padding="@dimen/dimen8"
        android:layout_height="match_parent">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/uisg_galeria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:scaleType="centerCrop"
            android:visibility="visible" >
    </com.android.volley.toolbox.NetworkImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutProfile"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
       >
        <ImageView
            android:id="@+id/uisg_flecha_left"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_flecha_left"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:background="#32000000"
            />
            <ImageView
                android:id="@+id/uisg_flecha_rigth"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_flecha_right"
                android:background="#32000000"
                android:padding="10dp"
                />
    </RelativeLayout>
</RelativeLayout>