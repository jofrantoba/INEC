<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#000000"
    >
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/dimen8"
        android:paddingTop="5dp"
        >
        <TextView
            android:id="@+id/txtTituloDestino"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17dp"
            android:paddingLeft="@dimen/dimen15"
            android:text="Previsualizacion"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/svPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_below="@+id/layoutHeader"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_fotografia"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:scaleType = "fitCenter"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/layoutHeader"
        android:clickable="true"
        />
    <LinearLayout
        android:id="@+id/layoutFooter"
        android:layout_width="fill_parent"
        android:layout_below="@+id/img_fotografia"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >

        <LinearLayout
            android:id="@+id/layoutBotones"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            >

            <ImageButton
                android:id="@+id/btnAceptar"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_weight="3"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_accept"
                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                />

            <ImageButton
                android:id="@+id/btnAgregarFoto"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_weight="3"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_addphoto"
                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                />

            <ImageButton
                android:id="@+id/btnQuitar"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_cerrarnuevo"
                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>